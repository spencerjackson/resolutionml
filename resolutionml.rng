<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <start>
    <element name="resolution">
      <element name="committee">
	<text/>
     </element>
      <element name="issue">
	<text/>
      </element>
      <element name="submitter">
	<text/>
      </element>
      <optional>
	<choice>
	  <element name="signatures">
	    <text/>
	  </element>
	  <oneOrMore>
	    <element name="signature">
	      <text/>
	    </element>
	  </oneOrMore>
	</choice>
      </optional>
      <element name="preamble">
	<oneOrMore>
	  <element name="clause">
	    <ref name="clauseContent" />
	  </element>
	</oneOrMore>
      </element>
      <element name="body">
	<oneOrMore>
	  <element name="clause">
	    <ref name="clauseContent" />
	  </element>
	</oneOrMore>
      </element>
    </element>
  </start>

<define name="clauseContent">
  <element name="phrase">
    <text/>
  </element>
  <element name="text">
    <text/>
  </element>
</define>
</grammar>
